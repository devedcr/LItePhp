{
    "name": "eduardo/lite-php",
    "description": "Framework Simple Based Laravel",
    "license": "MIT",
    "scripts": {
        "test": "phpunit --color=always --testdox test/"
    },
    "autoload": {
        "psr-4": {
            "Lite\\": "src/",
            "App\\": "app/"
        },
        "files": [
            "src/Helpers/app.php",
            "src/Helpers/http.php",
            "src/Helpers/session.php",
            "src/Helpers/auth.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Lite\\Test\\": "test/"
        }
    },
    "authors": [
        {
            "name": "eduardo",
            "email": "eduardo.rodriguez.info@gmail.com"
        }
    ],
    "require-dev": {
        "phpunit/phpunit": "^10.4"
    },
    "require": {
        "vlucas/phpdotenv": "^5.6"
    }
}